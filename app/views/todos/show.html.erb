<h1>
  <%= @todo.title %>
  <%= link_to edit_todo_path(@todo) do %>
    <i class='fa fa-edit'></i>
  <% end %>
</h1>

<div class="todo-details"><%= @todo.details %></div>

<p><%= check_box_tag('completed', value='1', checked = @todo.completed, options = {id: @todo.id}) %> <%= @message %></p>

<i class='fa fa-chevron-left'></i> <%= link_to 'Back to list', todos_path %>
