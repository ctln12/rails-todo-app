<h1>Edit todo</h1>

<%= form_for @todo, as: :todo, url: "/todos/#{@todo.id}", method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.check_box :completed %>
    <%= f.label 'Completed' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>


<%= link_to 'Back to list', todos_path %>
