<h1>My Todos</h1>

<% @todos.each do |todo| %>
  <div>
    <%= check_box_tag('completed', value='1', checked = todo.completed, options = {id: todo.id}) %>
    <%= link_to todo.title, todo_path(todo), class: "px-1" %>
    <%= link_to "todos/#{todo.id}", method: :delete do %>
      <i class='far fa-trash-alt'></i>
    <% end %>
  </div>
<% end %>

<hr>

<i class='fa fa-plus'></i> <%= link_to 'Add a new todo', new_todo_path %>
